<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".employer.RegisterYourCompanyActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:elevation="15dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mUserINfoProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_select_profile_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                android:text="Please provide your details"
                android:textColor="@color/defaultTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mUserINfoProfile" />

            <EditText
                android:id="@+id/register_company_person_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorEditTextBG"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:drawableTint="@color/userInfoTextColor"
                android:gravity="center_vertical"
                android:hint="Your Name"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColor="@color/userInfoTextColor"
             />


            <TextView
                android:id="@+id/mSpinnerGender"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorEditTextBG"
                android:drawableLeft="@drawable/ic_people"
                android:drawablePadding="10dp"
                android:drawableTint="@color/userInfoTextColor"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Select Your Gender"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/mPresentAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorEditTextBG"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:drawableTint="@color/userInfoTextColor"
                android:gravity="center_vertical"
                android:hint="Present Address"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColor="@color/userInfoTextColor" />

            <EditText
                android:id="@+id/mPermanentAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorEditTextBG"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:drawableTint="@color/userInfoTextColor"
                android:gravity="center_vertical"
                android:hint="Permanent Address"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColor="@color/userInfoTextColor" />


            <EditText
                android:id="@+id/mUserPhone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorEditTextBG"
                android:drawableLeft="@drawable/ic_call"
                android:drawablePadding="10dp"
                android:drawableTint="@color/userInfoTextColor"
                android:gravity="center_vertical"
                android:hint="Phone"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textColor="@color/almostBlack"
                 />


            <Button
                android:id="@+id/mCreateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorPrimary"
                android:text="Create"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>