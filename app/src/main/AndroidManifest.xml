<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.appkwan.exertion">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".feature.utitlity.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".feature.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.home.MainActivity" />
        <activity android:name=".feature.comment.CommentActivity" />
        <activity android:name=".feature.userinfo.UserInfoActivity" />
        <activity android:name=".feature.newpost.NewPostActivity" />
        <activity
            android:name=".feature.profile.ProfileActivity"
            android:parentActivityName=".feature.home.MainActivity" />
        <activity android:name=".feature.accountchoice.AccountChoiceActivity" />
        <activity android:name=".feature.signup.SignUpActivity" />
        <activity android:name=".feature.login.LoginActivity" />

        <activity android:name=".feature.message.allmessage.AllMessageActivity"
            android:parentActivityName=".feature.home.MainActivity"/>
        <activity android:name=".feature.message.MessageActivity" />
        <activity android:name=".feature.signup.otpsignup.MobileSignInActivity" />
        <activity android:name=".feature.signup.otpsignup.MobileSignUpActivity" />

    </application>

</manifest>